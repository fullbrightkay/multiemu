    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'multiemu'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=multiemu",
                    "--package=multiemu"
                ],
                "filter": {
                    "name": "multiemu",
                    "kind": "bin"
                }
            },
            "args": [
                "run-external",
                "roms/Other - Chip8/1-chip8-logo.ch8"
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'multiemu'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=multiemu",
                    "--package=multiemu"
                ],
                "filter": {
                    "name": "multiemu",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}